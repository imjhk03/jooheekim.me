---
import { getCollection } from "astro:content";
import { SITE } from "@/config";
import { slugifyStr, slugifyAll } from "@/utils/slugify";

export async function getStaticPaths() {
  const wikiEntries = await getCollection("wiki");

  const tagSet = new Set<string>();
  wikiEntries.forEach(entry => {
    entry.data.tags.forEach(tag => tagSet.add(tag));
  });

  return [...tagSet].map(tag => ({
    params: { tag: slugifyStr(tag) },
    props: {
      tagName: tag,
      books: wikiEntries
        .filter(entry => slugifyAll(entry.data.tags).includes(slugifyStr(tag)))
        .sort((a, b) => b.data.dateRead.valueOf() - a.data.dateRead.valueOf()),
    },
  }));
}

const { tagName, books } = Astro.props;

const ratingDots = (rating: number) => {
  return "●".repeat(rating) + "○".repeat(5 - rating);
};
---

<!doctype html>
<html dir={SITE.dir} lang={SITE.lang ?? "en"} class="reading-room">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>Tag: {tagName} | {SITE.title}</title>
    <meta name="title" content={`Tag: ${tagName} | ${SITE.title}`} />
    <meta name="description" content={`Wiki entries tagged "${tagName}"`} />
  </head>
  <body>
    <nav class="reading-nav">
      <div class="nav-container">
        <span class="nav-title">Wiki</span>
        <a href="/" class="nav-link">Home</a>
      </div>
    </nav>

    <main class="reading-container">
      <nav class="breadcrumb">
        <a href="/wiki/" class="breadcrumb-link">&larr; Back to Wiki</a>
      </nav>

      <section class="tag-content">
        <h1 class="tag-page-title">Tag: {tagName}</h1>
        <p class="tag-page-description">{books.length} {books.length === 1 ? "entry" : "entries"}</p>

        <div class="books-list">
          {books.map(book => (
            <div class="book-card">
              <a href={`/wiki/books/${book.id}`} class="book-card-link">
                <h2 class="book-title">{book.data.title}</h2>
                <p class="book-author">by {book.data.author}</p>
                <span class="book-rating" aria-label={`Rating: ${book.data.rating} out of 5`}>
                  {ratingDots(book.data.rating)}
                </span>
                <p class="book-description">{book.data.description}</p>
                <time class="book-date" datetime={book.data.dateRead.toISOString()}>
                  {book.data.dateRead.toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "long",
                  })}
                </time>
              </a>
              {book.data.tags.length > 0 && (
                <div class="book-card-tags">
                  {book.data.tags.map(tag => (
                    <a href={`/wiki/tags/${slugifyStr(tag)}/`} class="book-card-tag">{tag}</a>
                  ))}
                </div>
              )}
            </div>
          ))}
        </div>
      </section>
    </main>
  </body>
</html>

