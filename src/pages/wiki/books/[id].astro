---
import { render, getCollection } from "astro:content";
import WikiLayout from "@/layouts/WikiLayout.astro";
import { getBacklinks } from "@/utils/getBacklinks";

export async function getStaticPaths() {
  const wiki = await getCollection("wiki");
  return wiki.map(entry => ({
    params: { id: entry.id },
    props: { entry, allEntries: wiki },
  }));
}

const { entry, allEntries } = Astro.props;
const { Content } = await render(entry);
const backlinks = getBacklinks(entry.id, allEntries);
---

<WikiLayout
  title={entry.data.title}
  description={entry.data.description}
  author={entry.data.author}
  dateRead={entry.data.dateRead}
  rating={entry.data.rating}
  tags={entry.data.tags}
  backlinks={backlinks}
>
  <Content />
</WikiLayout>
